{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM", "WebWorker"],
    "types": ["vite/client", "node"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
} 